@model SimplestTwilio.Models.RecipientListDetailsViewModel

@{
    ViewData["Title"] = "List Details";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>@Model.Name</h1>
            <p class="text-muted">
                <i class="bi bi-people"></i> @Model.Contacts.Count contact(s)
            </p>
        </div>
        <div class="btn-group" role="group">
            <a asp-action="AddContact" asp-route-listId="@Model.RecipientListId" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Add Contact
            </a>
            <a asp-action="Edit" asp-route-id="@Model.RecipientListId" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit List
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Lists
            </a>
        </div>
    </div>

    @if (!Model.Contacts.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No contacts in this list yet. Click "Add Contact" to get started!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in Model.Contacts)
                    {
                        <tr>
                            <td>@(string.IsNullOrEmpty(contact.Name) ? "<em>No name</em>" : contact.Name)</td>
                            <td>@contact.PhoneNumber</td>
                            <td>
                                <form asp-action="RemoveContact" asp-route-id="@contact.ContactId" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" 
                                            onclick="return confirm('Are you sure you want to remove this contact?');">
                                        <i class="bi bi-trash"></i> Remove
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
