@model SimplestTwilio.Models.Message
@{
    ViewData["Title"] = "Delete Message Template";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4 text-danger">Delete Message Template</h1>

            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Warning:</strong> Are you sure you want to delete this message template?
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Message Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Message Text:</dt>
                        <dd class="col-sm-9">@Model.Text</dd>

                        <dt class="col-sm-3">Created Date:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-3">Times Sent:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-secondary">@Model.Histories.Count</span>
                        </dd>
                    </dl>
                </div>
            </div>

            @if (Model.Histories.Any())
            {
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <strong>Note:</strong> This message has been sent @Model.Histories.Count time(s). 
                    Deleting this template will not delete the history records of sent messages.
                </div>
            }

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="MessageId" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
