@model SimplestTwilio.Models.SendResultViewModel
@{
    ViewData["Title"] = "Send Result";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="mb-4">Send Result</h1>

            @if (Model.FailedSends == 0)
            {
                <div class="alert alert-success" role="alert">
                    <i class="bi bi-check-circle"></i>
                    <strong>Success!</strong> All messages were sent successfully.
                </div>
            }
            else if (Model.SuccessfulSends > 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Partially Completed:</strong> Some messages failed to send. See details below.
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-x-circle"></i>
                    <strong>Failed:</strong> All messages failed to send. Please check the errors below.
                </div>
            }

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Send Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Message Sent:</dt>
                        <dd class="col-sm-8">@Model.MessageText</dd>

                        <dt class="col-sm-4">Recipient Lists:</dt>
                        <dd class="col-sm-8">
                            @string.Join(", ", Model.ListNames)
                        </dd>

                        <dt class="col-sm-4">Total Recipients:</dt>
                        <dd class="col-sm-8">@Model.TotalRecipients</dd>

                        <dt class="col-sm-4">Successful Sends:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success">@Model.SuccessfulSends</span>
                        </dd>

                        <dt class="col-sm-4">Failed Sends:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-danger">@Model.FailedSends</span>
                        </dd>
                    </dl>
                </div>
            </div>

            @if (Model.Failures.Any())
            {
                <div class="card mb-4">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Failed Messages</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Phone Number</th>
                                        <th>Contact Name</th>
                                        <th>Error Message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var failure in Model.Failures)
                                    {
                                        <tr>
                                            <td>
                                                @if (failure.PhoneNumber.Length >= 4)
                                                {
                                                    <text>****@failure.PhoneNumber.Substring(failure.PhoneNumber.Length - 4)</text>
                                                }
                                                else
                                                {
                                                    <text>****</text>
                                                }
                                            </td>
                                            <td>@(failure.ContactName ?? "N/A")</td>
                                            <td>@failure.ErrorMessage</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <div class="d-flex justify-content-between">
                <a asp-controller="History" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-clock-history"></i> View History
                </a>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back to Messages
                </a>
            </div>
        </div>
    </div>
</div>
